@model SiteFileStorage.Models.LogOnViewModel

@{
    ViewBag.Title = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}
 

    <form class="form-horizontal" action="~/Account/Login" method="post" style="margin-top:240px;margin-left:350px">
        <div style="margin-top:240px;margin-left:100px">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:medium;">Email</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Login)
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:medium;">Password</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:medium">
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.LabelFor(model => model.RememberMe)
                        @Html.ValidationMessageFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
                @Html.ActionLink("Registration", "Register")
            </div>
        </div>
    </form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
