@model IEnumerable<SiteFileStorage.Models.FileViewModel>
@if (Model.Count() != 0)
{
    <ol class="rounded-list">
        @foreach (var file in Model)
        {
            <li>
                <a href=@Url.Action("ShowPost", "Files", new { id=file.Id}) target="_blank">@file.Name</a>
            </li>
        }
    </ol>
}
else
{
    <h4>No file!</h4>
}
